<% if notice %>
<aside id="notice"><%= notice %>
</aside><% end %>
<h1><%= t(".title_html") %></h1><% cache @products do %>
<ul class="catalog"><% @products.each do |product| %><% cache product do %>
    <li><%= image_tag(product.image_url) %>
        <h2><%= product.title %>
        </h2>
        <p><%= sanitize(product.description) %>
        </p>
        <div class="price"><%= number_to_currency(product.price, unit: "VNÄ", separator: ",", delimiter: "", format: "%n %u") %> <br>
        <%= button_to t(".add_html"), line_items_path(product_id: product, locale: I18n.locale),
                      remote: true %>
        <% # <%= button_to "Add to Cart", line_items_path(product_id: product), remote: true %>
        </div>
    </li><% end %><% end %><% end %>
</ul>
